<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
  package="com.chatty.android.chattyClient">

  <uses-permission android:name="android.permission.INTERNET" />
  <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
  <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>

  <application
    android:name=".App"
    android:allowBackup="true"
    android:icon="@mipmap/ic_launcher"
    android:label="@string/app_name"
    android:roundIcon="@mipmap/ic_launcher_round"
    android:supportsRtl="true"
    android:theme="@style/AppTheme">
    <activity android:name=".view.addFriend.AddFriendActivity" />
    <activity
      android:name=".view.calendar.CalendarActivity"
      android:clearTaskOnLaunch="true"
      android:launchMode="singleTask" />
    <activity
      android:name=".view.diaryDetail.DiaryDetailActivity"
      android:clearTaskOnLaunch="true"
      android:launchMode="singleTask" />
    <activity
      android:name=".view.friendsSetting.FriendsSettingActivity"
      android:clearTaskOnLaunch="true"
      android:launchMode="singleTask" />
    <activity
      android:name=".view.friendsList.FriendsListActivity"
      android:clearTaskOnLaunch="true"
      android:launchMode="singleTask" />
    <activity android:name=".view.main.MainActivity">
      <intent-filter>
        <action android:name="android.intent.action.MAIN" />

        <category android:name="android.intent.category.LAUNCHER" />
      </intent-filter>
    </activity>
    <activity
      android:name=".view.setting.SettingActivity"
      android:clearTaskOnLaunch="true"
      android:launchMode="singleTask" />
    <activity android:name=".view.write.WriteActivity" />
  </application>

</manifest>